{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "singularName": "product",
    "pluralName": "products",
    "displayName": "Product"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "color": {
      "type": "string"
    },
    "condition": {
      "type": "string"
    },
    "price": {
      "type": "integer",
      "required": true,
      "min": 100
    },
    "instock": {
      "type": "integer"
    },
    "image": {
      "type": "media",
      "multiple": true,
      "required": false,
      "allowedTypes": [
        "images",
        "files"
      ]
    },
    "fabric": {
      "type": "string"
    },
    "description": {
      "type": "text"
    },
    "style": {
      "type": "string"
    },
    "size": {
      "type": "enumeration",
      "enum": [
        "S",
        "M",
        "L",
        "XL"
      ]
    },
    "featured": {
      "type": "boolean",
      "required": false,
      "default": false
    }
  }
}
