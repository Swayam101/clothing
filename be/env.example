# Production Environment Configuration
# Copy this file to .env for production

# Server Configuration
PORT=3000
NODE_ENV=production

# Database Configuration
DATABASE_URL=mongodb://localhost:27017/express-scaffold

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# Firebase Configuration (supports Google and Facebook authentication)
# Option 1: Service Account Path (Recommended for production)
# Path is relative to project root (e.g., ./serviceAccountKey.json)
FIREBASE_SERVICE_ACCOUNT_PATH=./serviceAccountKey.json

# Option 2: Individual Credentials (Alternative - use if not using service account file)
# FIREBASE_PROJECT_ID=your-project-id
# FIREBASE_CLIENT_EMAIL=firebase-adminsdk@your-project.iam.gserviceaccount.com
# FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY\n-----END PRIVATE KEY-----"

# CORS Configuration
CORS_ORIGIN=https://yourdomain.com

# API Configuration
API_VERSION=v1

# Cashfree Payment Configuration
CF_ENVIRONMENT=sandbox
CF_CLIENT_ID=your_cashfree_app_id
CF_CLIENT_SECRET=your_cashfree_secret_key
CF_RETURN_URL=http://localhost:3000/payment-result

