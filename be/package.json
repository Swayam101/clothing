{
  "name": "express-scaffold",
  "version": "1.0.0",
  "description": "A modular scaffold for starting Node.js Express projects with TypeScript",
  "license": "ISC",
  "author": "swayam",
  "type": "commonjs",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "NODE_ENV=production node dist/index.js",
    "start:dev": "NODE_ENV=development node dist/index.js",
    "dev": "nodemon",
    "clean": "rm -rf dist",
    "test": "echo \"Error: no test specified\" && exit 1",
    "seed": "NODE_ENV=development ts-node src/scripts/seedProducts.ts",
    "seed:admin": "NODE_ENV=development ts-node src/scripts/seedAdmin.ts",
    "migrate:slugs": "NODE_ENV=development ts-node src/scripts/migrateProductSlugs.ts",
    "migrate:images": "NODE_ENV=development ts-node src/scripts/migrateProductImages.ts"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cashfree-pg": "^5.1.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "firebase-admin": "^13.6.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.0.3",
    "yup": "^1.7.1"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.10.0",
    "nodemon": "^3.1.11",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.0"
  },
  "keywords": [
    "express",
    "typescript",
    "scaffold",
    "node",
    "api"
  ]
}
